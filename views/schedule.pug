            tr
              th Time
              th Event
            include event
            +event('10:00 AM - 11:00 AM', 'Check-In'                                )
            +event('11:00 AM'           , 'Opening Ceremony'                        )
            +event('12:00 PM'           , 'Lunch and Begin Hacking'                 )
            +event('1:00 PM - 2:00 PM'  , 'Team Building'                           )
            +event('1:00 PM'            , 'MLH Hardware Lab Opens'                  )
            +event('1:30 PM - 2:30 PM'  , 'What is a Hackathon?'                    )
            +event('2:30 PM - 3:00 PM'  , 'What is Smart Space?'                    )
            +event('3:00 PM - 3:30 PM'  , 'Hackathon Survival Guide'                )
            +event('4:00 PM - 5:00 PM'  , 'Intro to Arduino - Ed Dougherty'         )
            +event('5:00 PM - 6:00 PM'  , 'RAS Drone Racing'                        )
            +event('6:00 PM'            , 'Dinner'                                  )
            +event('7:00 PM - 8:00 PM'  , 'Webtime with John'                       )
