include header
if message
  include navbar
  body
    section.intro(style="min-height:100vh;min-width:100vw;")
      .container
        .row.text-center
          .col-md-12.col-sm-12.col-xs-12
            .heading-count
              img#prof_img(src="/assets/img/transparent_prof.png").img-fluid
              h2=message
              a.btn.btn-common#form-submit(href="/") Go Back
  script(src="assets/js/jquery-min.js")
  script(src="assets/js/popper.min.js")
  script(src="assets/js/bootstrap.min.js")
  script(src="assets/js/vegas.min.js")
  script(src="assets/js/jquery.countdown.min.js")
  script(src="assets/js/menu.js")
  script(src="assets/js/classie.js")
  script(src="assets/js/scrolling-nav.js")
  script(src="assets/js/jquery.nav.js")
  script(src="assets/js/jquery.easing.min.js")
  script(src="assets/js/wow.js")
  script(src="assets/js/jquery.slicknav.js")
  script(src="assets/js/main.js")
  script(src="assets/js/form-validator.min.js")
  script(src="assets/js/contact-form-script.min.js")
  script(src="//cdnjs.cloudflare.com/ajax/libs/jasny-bootstrap/3.1.3/js/jasny-bootstrap.min.js")
else
  body
    section.register.section-padding-top.section-padding-bottom
      .container
        form#register(action="/register" method="post", enctype="multipart/form-data")
          .row
            .col-sm-12.col-md-6.form-group
              label(for="first_name") First Name
              input.form-control#first_name(type="text", name="first_name", required)
            .col-sm-12.col-md-6.form-group
              label(for="last_name") Last Name
              input.form-control#last_name(type="text", name="last_name", required)
            .col-sm-12.col-md-6.form-group
              label(for="phone") Phone #
              input.form-control#phone(type="text", name="phone", required)
            .col-sm-12.col-md-6.form-group
              label(for="email") Email
              input.form-control#email(type="email", name="email", required)
            .col-sm-12.col-md-6.form-group
              label(for="school") School
              input.form-control#school(type="text", name="school", required)
            .col-sm-12.col-md-6.form-group
              label(for="country") Country
              select.form-control#country(type="text", name="country", required)
            .col-sm-12.col-md-6.form-group
              label(for="state") State
              select.form-control#state(type="text", name="state", required)
            .col-sm-12.col-md-6.form-group
              label(for="ieee_member_id") IEEE Student Member # (if applicable, you will receive a limited edition prize) 
              input.form-control#ieee_member_id(type="number", name="ieee_member_id")
            .col-sm-12.col-md-6.form-group
              label(for="resume") Resume (optional)
              input.form-control#resume(type="file", name="resume")
            .col-sm-12.col-md-6.form-group
              label(for="shirt_size") T-Shirt Size
              select.form-control#shirt_size(type="text", name="shirt_size", required)
                option(value="") Select a Shirt Size
                option XXS
                option XS
                option S
                option M
                option L
                option XL
                option 2XL
                option 3XL
            .col-sm-12.col-md-6.form-group
              label(for="dietary_restrictions") List any dietary restrictions
              textarea.form-control#dietary_restrictions(type="textarea", name="dietary_restrictions")
            .col-sm-12.col-md-6.form-group.form-inline
              label(for="minor") I am under 18 years old
              input.form-control#minor(type="checkbox", name="minor")
            .col-sm-12.col-md-6.form-group.form-inline
              label(for="first_timer") This is my first Hackathon
              input.form-control#first_timer(type="checkbox", name="first_timer")
            .col-sm-12.col-md-6.form-group.form-inline
              label(for="mlh_coc") I have read and agree to the 
                a(href="https://static.mlh.io/docs/mlh-code-of-conduct.pdf" target="_blank") &nbsp;MLH Code of Conduct
              input.form-control#mlh_coc(type="checkbox", name="mlh_coc", required)
            .col-sm-12.col-md-6.form-group.form-inline
              label(for="mlh_dsn") I have read and agree to the 
                a(href="https://github.com/MLH/mlh-policies/blob/master/data-sharing.md", target="_blank") &nbsp;MLH Data Sharing Notice
              input.form-control#mlh_dsn(type="checkbox", name="mlh_dsn", required)
          .row
            .col-sm-12.text-center
              input(type="submit").btn

  include footer
  script(src="/assets/js/countries.js")
  include ../assets/js/register.js
